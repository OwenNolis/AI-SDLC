          },
          {
            "name": "UserTicketLimitService",
            "responsibility": "Enforce daily ticket creation limits per user."
          },
          {
            "name": "PriorityCompletionEnforcer",
            "responsibility": "Ensures HIGH priority tickets are completed before LOW/MEDIUM."
          },
          {
            "name": "DailySubjectUniquenessEnforcer",
            "responsibility": "Enforces unique ticket subjects per user per day."
          },
          {
            "name": "HighPriorityTicketLimitService",
            "responsibility": "Enforces daily limit for HIGH priority tickets per user."
          }
        ]
      }
    ]
  },
